<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/orderItemLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:layout_height="120dp"
    android:layout_marginLeft="11dp"
    android:layout_marginRight="11dp"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="5dp"
    app:cardElevation="10dp"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Card view for each Truck -->
    <RelativeLayout
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--Truck image-->
        <ImageView
            android:id="@+id/truck_Image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/van1"/>

        <!--Details-->
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Measurements"
            android:textSize="12sp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="12dp"
            android:layout_below="@+id/truck_name"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/weight_recording"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="20kg"
            android:textSize="12sp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="12dp"
            android:layout_below="@+id/truck_name"
            android:layout_marginStart="50dp"/>

        <TextView
            android:id="@+id/height_recording"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="4m"
            android:textSize="12sp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="12dp"
            android:layout_below="@+id/truck_name"
            android:layout_marginStart="20dp"/>
        <TextView
            android:id="@+id/length_recording"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="2m"
            android:textSize="12sp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="12dp"
            android:layout_below="@+id/truck_name"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/width_recording"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="1m"
            android:textSize="12sp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="12dp"
            android:layout_below="@+id/truck_name"
            android:layout_marginStart="50dp"/>

        <!--Details-->
        <TextView
            android:id="@+id/to_receiver"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Claire"
            android:textSize="12sp"
            android:layout_marginRight="12dp"
            android:layout_below="@+id/truck_name"
            android:layout_marginLeft="12dp"
            android:layout_toEndOf="@+id/truck_Image"/>

        <TextView
            android:id="@+id/good_type"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Building Materials"
            android:textSize="12sp"
            android:layout_marginEnd="12dp"
            android:layout_below="@+id/truck_name"
            android:layout_marginTop="40dp"
            android:layout_marginStart="160dp"
            android:layout_toEndOf="@+id/truck_Image"/>
        <TextView
            android:id="@+id/date_booked"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="20.8.23"
            android:textSize="12sp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/truck_name"
            android:layout_marginLeft="12dp"
            android:layout_toEndOf="@+id/truck_Image"/>
        <TextView
            android:id="@+id/time_booked"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/drop_off_time"
            android:textSize="12sp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/truck_name"
            android:layout_marginLeft="12dp"
            android:layout_toEndOf="@+id/truck_Image"/>
        <TextView
            android:id="@+id/pick_up_time"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Pick up time"
            android:textSize="12sp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="45dp"
            android:layout_below="@+id/truck_name"
            android:layout_marginLeft="12dp"
            android:layout_toEndOf="@+id/truck_Image"/>
        <TextView
            android:id="@+id/location_booked"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Coburg"
            android:textSize="12sp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="60dp"
            android:layout_below="@+id/truck_name"
            android:layout_marginLeft="12dp"
            android:layout_toEndOf="@+id/truck_Image"/>

        <TextView
            android:id="@+id/truck_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:textStyle="italic"
            android:textSize="26sp"
            android:layout_toEndOf="@+id/truck_Image"
            tools:text="Delivery Van"/>

        <ImageButton
            android:id="@+id/button_share"
            android:layout_marginBottom="5dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="share"
            android:layout_marginTop="10dp"
            android:layout_width="50dp"
            android:layout_marginStart="290dp"
            android:layout_height="50dp"
            android:src="@drawable/btn_share"
            android:padding="10dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>